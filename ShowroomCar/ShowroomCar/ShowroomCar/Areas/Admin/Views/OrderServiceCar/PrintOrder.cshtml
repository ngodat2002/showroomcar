@model ShowroomCar.Models.Order

<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width" />
<link href="~/Public/css/all.min.css" rel="stylesheet" />
<link href="~/Public/css/bo2otstrap.min.css" rel="stylesheet" />
<link href="~/Public/css/fStyle.css" rel="stylesheet" />
<!-- css datable -->
<link rel="stylesheet" href="~/public/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/public/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link href="~/Public/plugins/summernote/summernote-bs4.min.css" rel="stylesheet" />
<script src="~/Public/js/new/jquery-3.4.1.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<title>@ViewBag.Title</title>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="~/Public/js/new/jquery-3.4.1.min.js"></script>
<section class="p-5 container card">
    <div class=" bg-white p-4 ">
        <div class=" row ">
            <div class="col-md-4">  </div>
            <div class="col-md-4"> <h3 class="text-center font-weight-bold text-success">Order Service Detail</h3> </div>

        </div>
        <div class=" row ">
            <div class="col-md-8">
                <div>
                    <label for="psw"><span>FullName:</span></label>
                    <p class="font-weight-bold text-info"> @Model.Name </p>
                </div>
                <div>
                    <label for="psw"><span>Phone:</span></label>
                    <p class="font-weight-bold text-info"> @Model.Phone </p>
                </div>
                <div>
                    <label for="psw"><span>Address:</span></label>
                    <p class="font-weight-bold text-info"> @Model.Address </p>
                </div>
                <div>
                    <label for="psw"><span>Email:</span></label>
                    <p class="font-weight-bold text-info"> @Model.Email </p>
                </div>
                <div>
                    <label for="psw"><span>Schedule Time:</span></label>
                    <p class="font-weight-bold text-info"> @Model.ScheduleTime.ToString("dd/MM/yyyy") </p>
                </div>
                <div>
                    <label for="psw"><span>Note:</span></label>
                    <p class="font-weight-bold text-info"> @Model.Note </p>
                </div>
            </div>
            <div class="col-md-8">
                <h4 class="text-danger font-weight-bold">Car information view</h4>
                <div class="col-md-4"></div>
                <div>
                    <label for="psw"><span>Id:</span></label>
                    <span class="font-weight-bold text-secondary"> @ViewBag.carOrder.ID </span>
                </div>
                <div>
                    <label for="psw"><span>Name:</span></label>
                    <img width="20" src="~/public/images/Product/@ViewBag.carOrder.Image">
                    <span class="font-weight-bold text-secondary"> @ViewBag.carOrder.Name </span>
                </div>
                <div>
                    <label for="psw"><span>Trademark:</span></label>
                    <span class="font-weight-bold text-secondary"> @ViewBag.carOrder.Trademark </span>
                </div>
                <div>
                    <label for="psw"><span>Price:</span></label>
                    <spam class="font-weight-bold text-secondary"> @ViewBag.carOrder.Price.ToString("N0") VND </spam>
                </div>
                <div>
                    <label for="psw"><span>Number:</span></label>
                    <span class="font-weight-bold text-secondary"> @ViewBag.carOrder.Number </span>
                </div>
                <div>
                    <label for="psw"><span>Payment Method:</span></label>
                    <span class="font-weight-bold text-secondary"> @Model.PaymentMethod </span>
                </div>
                <div>
                    <label for="psw"><span>Payment Status:</span></label>
                    @if (@Model.PaymentStatus == 1)
                    {
                        <span class="font-weight-bold text-secondary"> Paid </span>
                    }
                    else
                    {
                        <span class="font-weight-bold text-secondary"> Unpaid </span>
                    }
                </div>
            </div>
        </div>
    </div>
    <div>
        <button class="btn btn-sm btn-info float-right" onclick="window.print();">Print</button>
    </div>
</section>
<script>
    $("#user").addClass("active");
</script>

